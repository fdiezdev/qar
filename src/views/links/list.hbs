<div class="py-5">
    <div class="card">
        <div class="card-body">
            <form>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col">
                            <label for="">Desde:</label>
                            <input type="text" class="form-control is-primary" placeholder="Ej. Calamuchita 232">
                        </div>
                        <div class="col">
                            <label for="">Hasta:</label>
                            <input type="text" class="form-control" placeholder="Ej. Av. Colon 844">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-block btn-outline-primary">Buscar</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="my-3">
    <div class="card">
        <div class="card-body">
            <h1>Todas las Rutas:</h1>
        </div>
    </div>
</div>
<div class="row py-5">
    {{#each routes}}
    <div class="col-lg-4 col-sm-12">
        <div class="card mb-3">
            <div class="card-body text-center">
                <div class="form-group">
                    <small class="text-muted text-uppercase">desde</small>
                    <br>
                    <i class="fas fa-map-marker-alt"></i>
                    <br>
                    {{from_place}}
                </div>
                <div class="text-center display-4">
                    <i class="fas fa-arrow-down"></i>
                </div>
                <div class="form-group">
                    <small class="text-muted text-uppercase">hasta</small>
                    <br>
                    <i class="fas fa-map-marker-alt"></i>
                    <br>
                    {{to_place}}
                </div>
                <div class="form-group">
                    <span class="text-muted text-uppercase">Salida: {{description}}</span>
                </div>
                <a href="/links/map/{{id}}" target="_blank" class="btn btn-block btn-outline-success">
                    <iclass="fas fa-plane-departure"></i> Tomar Ruta
                </a>
            </div>
            <div class="card-footer">
                <small class="text-muted">{{timeago created_at}}</small>
            </div>
        </div>
    </div>
    {{/each}}
</div>